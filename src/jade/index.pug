	.two.section.section_2
		.container
			p.two__title Проверьте себя!
			p.two__subtitle Есть ли у Вас следующие признаки?
			.two__row
				.two__col
					img.two__img(src='img/content/doctor.jpg' alt='image')
				.two__col
					ul.two__list
